<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_grounds_budget_foods_orders"
    tools:context=".cart">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Orders"
        android:textColor="#FFF0E3"
        android:textColorHighlight="#FFF0E3"
        android:textSize="45sp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="7dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="72dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/cart"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="13dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/custom_button"
        android:text="Checkout"
        app:backgroundTint="#F7931E"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="643dp" />

    <GridLayout
        android:layout_width="409dp"
        android:layout_height="419dp"
        android:layout_weight="3"
        android:background="@drawable/bg"
        android:columnCount="2"
        android:rowCount="2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="96dp" >

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </GridLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="52dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/coins"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="559dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="TOTAL"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="574dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="563dp" />
</androidx.constraintlayout.widget.ConstraintLayout>